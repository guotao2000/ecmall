            <td><a href="index.php?app=couponadmin&amp;act=edit&amp;id={$conf.coupon_id}">{$lang.edit}</a>|
                
                <a href="index.php?app=couponadmin&amp;act=drop&amp;id={$conf.coupon_id}');">{$lang.drop}</a></td>
