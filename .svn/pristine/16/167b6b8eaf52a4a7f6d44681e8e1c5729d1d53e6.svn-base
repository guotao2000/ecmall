{include file="header.html"}
<div id="rightTop">
    <p>促销管理</p>{$conditions}
    <ul class="subnav">
        <li><a class="btn1" href="index.php?app=promote">添加档期</a></li>
        <li><a class="btn1" href="index.php?app=promote&amp;act=list_schedule">档期列表</a></li>
