function add_to_cart(spec_id, quantity, store_id)
{	
    var url = '/index.php?app=cart&act=to_shop&spec_id='+spec_id+'&quantity='+quantity+'&store_id='+store_id;
            //alert(url);

			$.getJSON(url, '', function(data){
