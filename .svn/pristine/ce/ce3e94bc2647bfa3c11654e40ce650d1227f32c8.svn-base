            function gosearch() {
                goodsid = $("#good_id").val();
                goodname = $("#good_name").val();
                goodsku=$("#goodsku").val();
                gall=goodsid+goodname+goodsku;
                if (goodsid.length > 0) {

                    var url = "/index.php?app=seller_order&act=sgoods&otype=gid&good_id=" + goodsid;
                 $.get(url, '', function (data) {
                     $("#sresult").html(data);
                 });
